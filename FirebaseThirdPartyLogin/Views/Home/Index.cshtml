@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
</head>

<body>
    <div id="title">
        <transition name="fade">
            <h1 v-if="seen">{{text}}</h1>
        </transition>
        <p><p>
        <button v-on:click="reverse">reverse</button>
        <p><p>
        <input v-model="text">
    </div>

    <p><p>
    <script src="~/js/logout.js" asp-append-version="true"></script>
    <script>
        var setTitle = new Vue({
            el: '#title',
            data:
            {
                text: 'Vue我來了',
                seen: true,
                arr: ['111', '我', '三']
            },
            methods:
            {
                reverse: function () {
                    if (this.seen) {
                        this.seen = false
                    }
                    else {
                        this.seen = true
                        this.text = this.arr[1]
                    }
                    this.text = this.text.split('').reverse().join('')
                }
            }
        });
    </script>
</body>
</html>